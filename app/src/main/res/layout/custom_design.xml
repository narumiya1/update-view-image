<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/cardview_shadow_end_color"
    app:cardBackgroundColor="@color/cardview_shadow_end_color"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Custom Dialog Heading"
            android:textColor="#000"
            android:textSize="18sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/heading"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:hint="enter some text..."
            android:textColor="#000"
            android:visibility="gone" />

        <TextView
            android:visibility="gone"
            android:id="@+id/texts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/input"
            android:layout_marginTop="6dp"
            android:text="Choose Grain" />

        <Spinner
            android:id="@+id/listItemz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input"
            android:padding="6dp" />

        <TextView
            android:layout_marginLeft="13dp"
            android:id="@+id/gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/listItemz"
            android:layout_marginTop="16dp"
            android:text="Choose From Gallery"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:layout_marginLeft="13dp"
            android:id="@+id/cammera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gallery"
            android:layout_marginTop="10dp"
            android:text="Take Camera"
            android:textColor="#000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/action_oke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:background="@color/colorPrimaryDark"
            android:text="Cancel"
            android:textColor="#33bbff"
            android:textSize="18sp"
            android:visibility="gone"
          />

        <Button

            android:id="@+id/action_cancels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:text="INTENT"
            android:visibility="gone"
            android:layout_marginLeft="12dp"
            android:textColor="#E53935"
            android:textSize="18sp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>
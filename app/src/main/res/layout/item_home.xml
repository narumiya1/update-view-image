<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_main_home"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="4dp"
        android:padding="10dp"
        card_view:cardBackgroundColor="@color/whiteCardColor"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="2.5dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="0dp">
                <TextView
                    android:layout_marginTop="8dp"
                    android:id="@+id/title_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Hasil Test Terakhir"
                    android:textSize="20sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/title_data"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="#121111"/>
                <TextView
                    android:id="@+id/item_time_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="6dp"
                    android:fontFamily="@font/montserratlight"
                    android:gravity="right|bottom"
                    android:text="2021"
                    android:layout_below="@id/title_data"
                    android:textColor="@android:color/black"
                    android:textSize="11sp" />
                <TextView
                    android:layout_marginTop="6dp"
                    android:layout_below="@id/item_time_home"
                    android:id="@+id/tv_item1_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratlight"
                    android:text="Type"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="italic"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/tv_items2_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_item1_home"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/montserratlight"
                    android:text="Type "
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/data_szie_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_items2_home"
                    android:fontFamily="@font/montserratlight"
                    android:text="Size "
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="italic" />


                <TextView
                    android:id="@+id/tv_items3_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/data_szie_home"
                    android:fontFamily="@font/montserratlight"
                    android:text="Size"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />


            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">


        </FrameLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:layout_centerHorizontal="true"
    android:layout_centerInParent="true"
    android:layout_centerVertical="true"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:layout_height="wrap_content"

        android:justificationMode="inter_word"
        android:text="Grain Vision 2021 v1 adalah aplikasi kecerdasan buatan pendeteksi jenis gandum. untuk penggunaannya Upload foto dengan mengklik icon photo, aplikasi akan secara otomatis mendeteksi jenis gandum sesuai dengan foto yang di upload" />
    <ImageView
        android:layout_marginTop="6dp"
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ic_launcher" />


</LinearLayout>
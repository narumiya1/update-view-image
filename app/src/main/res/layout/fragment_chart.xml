<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/tv_toolbar"
                android:fontFamily="@font/ubunturegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="PANDUAN APLIKASI GRAIN VISION 2020 "
                android:textColor="#FFFFFF"

                android:textSize="20dp" />
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_large">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_1"
                    android:fontFamily="@font/ubunturegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1. "
                    android:textSize="16dp" />

                <TextView
                    android:fontFamily="@font/ubunturegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/text_1"
                    android:layout_weight="1"
                    android:text="Upload foto dengan mengklik icon photo"
                    android:textSize="16dp" />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:layout_marginTop="4dp"
                        android:layout_gravity="right"
                        android:layout_toRightOf="@id/text_1"
                        android:id="@+id/iv_add"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="#F8F6F6"
                        android:outlineAmbientShadowColor="@color/colorAccent"
                        android:src="@drawable/ic_baseline_add_a_photo_24" />
                </FrameLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_2"
                    android:fontFamily="@font/ubunturegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2. "
                    android:textSize="16dp" />

                <TextView
                    android:fontFamily="@font/ubunturegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/text_2"
                    android:layout_weight="1"
                    android:text="Setelah foto selesai di upload, maka aplikasi akan secara otomatis mengenerate angka statistik sesuai dengan yang ada di foto "
                    android:textSize="16dp" />
                <FrameLayout
                    android:layout_below="@id/text_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginTop="26dp"
                        android:layout_gravity="center"
                        android:id="@+id/ib_uploaded"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:background="#F8F6F6"
                        android:outlineAmbientShadowColor="@color/colorAccent"
                        android:src="@drawable/uploaded" />
                </FrameLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_3"
                    android:fontFamily="@font/ubunturegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3. "
                    android:textSize="16dp" />

                <TextView
                    android:fontFamily="@font/ubunturegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/text_3"
                    android:layout_weight="1"
                    android:text="Secara otomatis hasil dari tampilan akan tersimpan di history"
                    android:textSize="16dp" />
                <FrameLayout
                    android:layout_below="@id/text_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginTop="19dp"
                        android:layout_gravity="left"
                        android:id="@+id/iv_viewhistori"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:background="#F8F6F6"
                        android:outlineAmbientShadowColor="@color/colorAccent"
                        android:src="@drawable/viewz_history" />

                    <ImageView
                        android:id="@+id/iv_viewhistoria"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="10dp"
                        android:background="#F8F6F6"
                        android:outlineAmbientShadowColor="@color/colorAccent"
                        android:src="@drawable/view_history2" />

                </FrameLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="4. "
                    android:textSize="16dp" />

                <TextView
                    android:fontFamily="@font/ubunturegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/text_4"
                    android:layout_weight="1"
                    android:text="dengan mengklik salah satu list yang ada di history, maka halaman akan berpindah ke page Detail"
                    android:textSize="16dp" />
                <FrameLayout
                    android:layout_below="@id/text_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginTop="26dp"
                        android:layout_gravity="center"
                        android:id="@+id/iv_3"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:background="#F8F6F6"
                        android:outlineAmbientShadowColor="@color/colorAccent"
                        android:src="@drawable/details" />
                </FrameLayout>

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>


</ScrollView>

